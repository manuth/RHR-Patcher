{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "args": ["/C"],
    "tasks":
    [
        {
            "taskName": "Build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": [ "cd source && grunt dist" ]
        },
        {
            "taskName": "Serve",
            "suppressTaskName": true,
            "isWatching": true,
            "args": [ "bundle exec jekyll serve --config _config.local.yml --watch" ]
        }
    ]
}