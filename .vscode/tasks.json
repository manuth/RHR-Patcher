{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "args": ["/C"],
    "isShellCommand": true,
    "tasks":
    [
        {
            "taskName": "Build files",
            "suppressTaskName": true,
            "args": ["grunt dist"],
            "isBuildCommand": true,
            "isWatching": false,
            "problemMatcher": [
                "$lessCompile",
                "$tsc",
                "$jshint"
            ]
        },
        {
            "taskName": "Serve Website",
            "suppressTaskName": true,
            "args": ["bundle exec jekyll serve --watch"],
            "isWatching": true
        }
    ]
}